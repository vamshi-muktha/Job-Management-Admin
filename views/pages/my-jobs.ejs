<% layout('layout/boilerplate') %>

<section class="container my-5">
  <h3 class="mb-4">Jobs You've Applied To</h3>

  <% if (jobs.length === 0) { %>
    <p class="text-muted">You haven't applied to any jobs yet.</p>
  <% } else { %>
    <div class="row g-4">
      <% jobs.forEach(job => { %>
        <div class="col-md-4">
          <div class="card p-3 h-100 shadow-sm rounded-4">
            <h5 class="mb-2"><%= job.title %></h5>
            <p class="text-muted mb-1"><strong>Company:</strong> <%= job.company %></p>
            <p class="text-muted mb-1"><strong>Location:</strong> <%= job.location %></p>
            <p class="text-muted mb-1"><strong>Salary:</strong> ₹<%= job.salaryMin %> - ₹<%= job.salaryMax %></p>
            <p class="small text-muted"><%= job.description.slice(0, 80) %>...</p>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</section>
